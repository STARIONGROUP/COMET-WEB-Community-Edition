@using COMETwebapp.Utilities
@using COMETwebapp.Extensions
@inherits COMET.Web.Common.Components.Applications.SingleIterationApplicationBase<COMETwebapp.ViewModels.Components.SubscriptionDashboard.ISubscriptionDashboardBodyViewModel>

<LoadingComponent IsVisible="@this.ViewModel.IsLoading">
    <div id="@WebAppConstantValues.SubscriptionDashboardPage.QueryPageBodyName()" class="row">
        <div class="col-2 width-fit-content">
            <ParameterTypeSelector ViewModel="@(this.ViewModel.ParameterTypeSelector)"/>
        </div>
        <div class="col-2 width-fit-content">
            <OptionSelector ViewModel="@(this.ViewModel.OptionSelector)"/>
        </div>
        <DxTreeView>
            <Nodes>
                <DxTreeViewNode Name="SubscribedTable" Text="@this.SubscriptionTableTitle" Expanded="true" CssClass="color-title">
                    <Nodes>
                        <DxTreeViewNode>
                            <Template>
                                <SubscribedTable ViewModel="@this.ViewModel.SubscribedTable"/>
                            </Template>
                        </DxTreeViewNode>
                    </Nodes>
                </DxTreeViewNode>
                <DxTreeViewNode Name="DomainOfExpertiseTable" Text="@this.DomainOfExpertiseTableTitle" Expanded="true" CssClass="color-title">
                    <Nodes>
                        <DxTreeViewNode>
                            <Template>
                                <DomainOfExpertiseSubscriptionTable ViewModel="@this.ViewModel.DomainOfExpertiseSubscriptionTable" OnMissingValueClick="@this.RedirectToParameterEditor"/>
                            </Template>
                        </DxTreeViewNode>
                    </Nodes>
                </DxTreeViewNode>
            </Nodes>
        </DxTreeView>
    </div>
</LoadingComponent>
