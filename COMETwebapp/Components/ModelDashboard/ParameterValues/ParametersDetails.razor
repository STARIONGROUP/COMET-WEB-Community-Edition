@using COMETwebapp.ViewModels.Components.ModelDashboard.ParameterValues

<span class="text-align-center">
	<DxGrid Data="@this.rows" ColumnResizeMode="GridColumnResizeMode.ColumnsContainer">
		<ColumnHeaderCaptionTemplate>
			<span class="width-100">@context.Caption</span>
		</ColumnHeaderCaptionTemplate>
		<Columns>
			<DxGridDataColumn Caption="Element" FieldName="@nameof(ParameterValueSetBaseRowViewModel.ElementName)"/>
			<DxGridDataColumn Caption="Parameter" FieldName="@nameof(ParameterValueSetBaseRowViewModel.ParameterName)"/>
			<DxGridDataColumn Caption="Option" FieldName="@nameof(ParameterValueSetBaseRowViewModel.OptionName)"/>
			<DxGridDataColumn Caption="State" FieldName="@nameof(ParameterValueSetBaseRowViewModel.ActualFiniteStateName)"/>
			<DxGridDataColumn Caption="Actual Value" FieldName="@nameof(ParameterValueSetBaseRowViewModel.ActualValue)" AllowSort="false">
				<CellDisplayTemplate>
					@{
						var row = (context.DataItem as ParameterValueSetBaseRowViewModel)!;
						<ValueArrayDetails ParameterType="@row.ParameterType" Scale="@row.Scale" Value="@row.ActualValue"/>
					}
				</CellDisplayTemplate>
			</DxGridDataColumn>
			<DxGridDataColumn Caption="Published Value" FieldName="@nameof(ParameterValueSetBaseRowViewModel.PublishedValue)" AllowSort="false">
				<CellDisplayTemplate>
					@{
						var row = (context.DataItem as ParameterValueSetBaseRowViewModel)!;
						<ValueArrayDetails ParameterType="@row.ParameterType" Scale="@row.Scale" Value="@row.PublishedValue"/>
					}
				</CellDisplayTemplate>
			</DxGridDataColumn>
			<DxGridDataColumn Caption="Owner" FieldName="@nameof(ParameterValueSetBaseRowViewModel.Owner)"/>
		</Columns>
	</DxGrid>
</span>
