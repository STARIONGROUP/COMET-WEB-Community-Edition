@if (this.ViewModel.ElementDefinitions.Items.Any())
{
	<DxPopup @ref="@(this.detailsPopup)" HeaderText="Elements Details" MaxHeight="1000" MaxWidth="900" MinWidth="400">
        <ElementsDetails Elements="@(this.elementsDetailsValues)" />
	</DxPopup>

	<div class="col width-100 text-align-center">
		<UnusedElements Elements="@this.ViewModel.ElementDefinitions.Items" CurrentDomain="@this.ViewModel.CurrentDomain"
		                UnusedElementDefinitions="@this.ViewModel.UnusedElements" OnAccessDataCallback="@this.OnAccessData" />
	</div>
	<div class="col width-100 text-align-center">
		<UnreferencedElements Elements="@this.ViewModel.ElementDefinitions.Items"
		                      CurrentDomain="@this.ViewModel.CurrentDomain"
		                      UnreferencedElementDefinitions="@this.ViewModel.UnreferencedElements" OnAccessDataCallback="@this.OnAccessData" />
	</div>
}

