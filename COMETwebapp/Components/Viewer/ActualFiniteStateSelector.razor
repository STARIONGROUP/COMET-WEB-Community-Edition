@{
    <div class="actual-finite-state-list">
        <p>@(((ActualFiniteStateList)this.ViewModel.ActualFiniteStates.First().Container).Name)</p>
    </div>

    foreach (var actualState in this.ViewModel.ActualFiniteStates)
    {
        var selectionState = actualState == this.ViewModel.SelectedFiniteState;
        <div class="actual-finite-state 
             @(selectionState ? "selected-state" : "")"
             @onclick="@(() => this.ViewModel.SelectActualFiniteState(actualState))">

            <p>@actualState.Name</p>
            
            @if (actualState.IsDefault)
            {
                <p class="default-state">- Default</p>
            }
        </div>
    }
}
