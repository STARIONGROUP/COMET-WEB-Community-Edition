<div class="application-item-container @(this.CssClass)" @onclick="@(this.ExecuteAction)" id="@(this.Id)" title="@(this.Text)">

    @if (this.ChildContent is not null)
    {
        @(this.ChildContent)
    }
    else
    {
        <div style="display: flex; align-items: center;">
            <span class="@(this.IconCssClass) display-flex justify-content-center application-sidebar-icon" aria-hidden="true"></span>
            <span class="not-displayed-on-collapse">@(this.Text)</span>
        </div>
        if (this.DropdownSelector)
        {
            <div style="margin-left: auto;" class="not-displayed-on-collapse">
                <span class="oi oi-chevron-right" style="font-size: 15px;"></span>
            </div>
        }
    }
</div>
