@using CDP4Common.EngineeringModelData
@inherits BelongsToIterationSelector<COMET.Web.Common.ViewModels.Components.Selectors.IFiniteStateSelectorViewModel>

@if (this.ViewModel.CurrentIteration != null)
{
	<h6>Filter on State:</h6>
	<DxComboBox Data="@this.ViewModel.AvailableFiniteStates"
			AllowUserInput="true"
			@bind-Value="@this.ViewModel.SelectedActualFiniteState"
			FilteringMode="DataGridFilteringMode.Contains"
			TextFieldName="@nameof(ActualFiniteState.Name)"
			ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
			NullText="Select a State" />
}