@namespace COMET.Web.Common.Shared
<nav class="navbar header-navbar p-0">
    <DxMenu Title="COMET"
            CollapseItemsToHamburgerMenu="true"
            CollapseItemToIconMode="MenuCollapseItemToIconMode.Sequentially"
            DisplayMode="MenuDisplayMode.Auto"
            Orientation="Orientation.Horizontal"
            HamburgerButtonPosition="MenuHamburgerButtonPosition.Right"
            CssClass="topmenu">
        <TitleTemplate>
            @if (this.RegistrationService.CustomHeader != null)
            {
                <DynamicComponent Type="@this.RegistrationService.CustomHeader"/>
            }
            else
            {
                <TopMenuTitle/>
            }
        </TitleTemplate>
        <Items>
            @foreach (var menuEntry in this.RegistrationService.RegisteredAuthorizedMenuEntries.Where(x => x.IsSubclassOf(typeof(MenuEntryBase))))
            {
                <DynamicComponent Type="@menuEntry"/>
            }
        </Items>
    </DxMenu>
</nav>
